@model List<User>
@{

    Layout = "_AdminLayout";
}
<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @if (Model.Count > 0)

                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td user-roles="@user.Id"></td>
                            <td><a class="btn btn-sm btn-outline-success" asp-action="AssignRole" asp-route-id="@user.Id">Assign
                                    Role</a></td>
                        </tr>

                    }

                }

                else

                {
                    <div class="d-flex justify-content-center">No memberss</div>

                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4 mt-md-1 ml-md-4">
        <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Members"
                asp-controller="Admin">Members</a></div>
        <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Roles"
                asp-controller="Admin">Roles</a></div>
        <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="RoleCreate"
                asp-controller="Admin">Create Role</a></div>
        @* <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Logout"
            asp-controller="Admin">Logout</a></div> *@
    </div>
</div>
