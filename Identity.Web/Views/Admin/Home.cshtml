@model List<User>

@{

    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-md-8">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Email</th>
                </tr>

            </thead>
            <tbody>
                @if (Model.Count > 0)

                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <th>@user.Id</th>
                            <th>@user.UserName</th>
                            <th>@user.Email</th>
                        </tr>

                    }

                }
                else
                {
                    <div class="d-flex justify-content-center">Hiç bir üye yok..</div>

                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4 mt-md-1">
      <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Mmbers" asp-controller="Admin">Mmmbers</a></div>
      <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Roles" asp-controller="Admin">Roles</a></div>
      <div class="m-md-1"> <a class="btn btn-sm btn-outline-primary btn-block" asp-action="Logout" asp-controller="Admin" asp-route-returnUrl="/Home/Index">Logout</a></div>
   </div>


</div>
