@model UpdateUserViewModel
@{
   Layout = "_Layout";
}

@if (ViewBag.alert == "true")
{
   <div class="m-md-3">
      @Html.Raw(ViewBag.updateSuccess)
   </div>
}
else
{
   <h3 class="d-flex justify-content-center m-md-3">Update Info</h3>
   <div class="row">
      <form asp-action="UpdateUser" method="post" class="col-md-4 offset-4" enctype="multipart/form-data">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <input asp-for="UserName" name="UserName" class="form-control form-control-sm" type="text"
            placeholder="Enter new username">
            <span asp-validation-for="UserName" id="userName" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="Email" name="Email" class="form-control form-control-sm" type="text"
            placeholder="Enter new email">
            <span id="email" asp-validation-for="Email" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="PhoneNumber" name="PhoneNumber" class="form-control form-control-sm" type="text"
            placeholder="Enter new phone number">
            <span id="phoneNumber" asp-validation-for="PhoneNumber" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="City" name="City" class="form-control form-control-sm" type="text"
            placeholder="Enter new city">
            <span id="city" asp-validation-for="City" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="BirthDay" name="BirthDay" class="form-control form-control-sm" type="date" placeholder="">
            <span id="birthDay" asp-validation-for="BirthDay" class="text-danger"></span>
         </div>
         <div class="form-group">
            <select class="form-control form-control-sm" name="Gender" asp-for="Gender" asp-items="@ViewBag.gender" id="genderSelect">

            </select>
            <span id="phoneNumber" asp-validation-for="PhoneNumber" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input name="userImage" class="form-control form-control-sm" type="file" placeholder="">
            <span id="image" asp-validation-for="Image" class="text-danger"></span>
         </div>
         <button class="btn btn-sm btn-outline-primary">Change Info</button>
      </form>
   </div>
}



@section Scripts{
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
