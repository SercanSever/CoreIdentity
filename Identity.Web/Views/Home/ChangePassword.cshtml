@model PasswordChangeViewModel
@{
   Layout = "_Layout";
}

@if (ViewBag.alert == "true")
{
   <div class="m-md-3">
      @Html.Raw(ViewBag.ChangeSuccess)
   </div>
}
else
{
   <h3 class="d-flex justify-content-center m-md-3">Change Password</h3>
   <div class="row">

      <form asp-action="ChangePassword" method="post" class="col-md-4 offset-4">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
         <div class="form-group">
            <input asp-for="OldPassword" name="OldPassword" class="form-control form-control-sm" type="password"
            placeholder="Enter old password">
            <span asp-validation-for="OldPassword" id="oldPÄžassword" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="NewPassword" name="NewPassword" class="form-control form-control-sm" type="password"
            placeholder="Enter new password">
            <span id="newPassword" asp-validation-for="NewPassword" class="text-danger"></span>
         </div>
         <div class="form-group">
            <input asp-for="NewPasswordConfirm" name="NewPasswordConfirm" class="form-control form-control-sm"
            type="   password" placeholder="Confirm new password">
            <span id="newPasswordConfirm" asp-validation-for="NewPasswordConfirm" class="text-danger"></span>
         </div>
         <button class="btn btn-sm btn-outline-primary">Change Password</button>
      </form>
   </div>
}

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</section>